<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="48dp"
    android:paddingBottom="64dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_title"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"

        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_data_section"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/syncButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_sync_button"
        android:backgroundTint="@color/sortasong_primary"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_folders_section"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/currentFolderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_current_folder_label"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/changeFolderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_change_folder_button"
        android:backgroundTint="@android:color/darker_gray"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/rescanFolderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_rescan_button"
        android:backgroundTint="@android:color/darker_gray"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_music_files_section"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/verificationStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_status_ready"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <ProgressBar
        android:id="@+id/verificationProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/verifyTracksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_verify_missing_button"
        android:backgroundTint="@color/sortasong_primary"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/verifyAllTracksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_verify_all_button"
        android:backgroundTint="@color/sortasong_primary"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/cancelVerificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_cancel_verification_button"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_settings_back_button"
        android:backgroundTint="@android:color/darker_gray"
        android:textSize="16sp" />

</LinearLayout>
